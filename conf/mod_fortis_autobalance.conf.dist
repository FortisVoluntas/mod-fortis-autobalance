# ============================================================
# Fortis AutoBalance (mod-fortis-autobalance)
# Lineare Abschwächung unterhalb der Baseline-Spielerzahl.
# Beispiel 5er-Instanz: 1 Spieler -> ~20%, 5 Spieler -> 100%.
# ============================================================

# Modul aktivieren
FortisAB.Enable = 1

# Nur in Instanzen/Raids (1) oder überall (0)
FortisAB.InstanceOnly = 1

# Ziel-Spielerzahl für 100%
FortisAB.BaselinePlayers = 5

# Minimaler Multiplikator; 0.0 = automatisch 1/Baseline
# (Bei Baseline=5 ist auto = 0.20)
FortisAB.MinMultiplier = 0.0

# Über Baseline >100% erlauben? 0 = nein (Standard), 1 = ja
FortisAB.AllowAboveBase = 0
